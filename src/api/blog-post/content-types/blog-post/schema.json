{
  "kind": "collectionType",
  "collectionName": "blog_posts",
  "info": {
    "singularName": "blog-post",
    "pluralName": "blog-posts",
    "displayName": "Blog Post",
    "description": ""
  },
  "options": {
    "draftAndPublish": true
  },
  "pluginOptions": {},
  "attributes": {
    "title": {
      "type": "string",
      "maxLength": 75,
      "required": true
    },
    "url_id": {
      "type": "string",
      "required": true,
      "unique": true,
      "regex": "^[\\.a-zA-Z0-9-_]+$"
    },
    "description": {
      "type": "text",
      "required": false,
      "maxLength": 150
    },
    "image": {
      "type": "media",
      "multiple": false,
      "required": true,
      "allowedTypes": [
        "images"
      ]
    },
    "body": {
      "type": "dynamiczone",
      "components": [
        "article.blog-post-image",
        "article.blog-post-text"
      ],
      "required": true
    },
    "authors": {
      "type": "relation",
      "relation": "manyToMany",
      "target": "api::member.member",
      "inversedBy": "blog_posts"
    }
  }
}
