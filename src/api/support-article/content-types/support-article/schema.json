{
  "kind": "collectionType",
  "collectionName": "support_articles",
  "info": {
    "singularName": "support-article",
    "pluralName": "support-articles",
    "displayName": "Support Article"
  },
  "options": {
    "draftAndPublish": true
  },
  "pluginOptions": {},
  "attributes": {
    "title": {
      "type": "string",
      "required": true
    },
    "description": {
      "type": "text",
      "required": true,
      "maxLength": 400,
      "minLength": 20
    },
    "url_id": {
      "type": "string",
      "regex": "^[\\.a-zA-Z0-9-_]+$",
      "required": true,
      "unique": true
    },
    "image": {
      "allowedTypes": [
        "images"
      ],
      "type": "media",
      "multiple": false,
      "required": false
    },
    "body": {
      "type": "dynamiczone",
      "components": [
        "article.blog-post-image",
        "article.blog-post-text"
      ],
      "required": true,
      "min": 1
    },
    "support_tag": {
      "type": "relation",
      "relation": "manyToOne",
      "target": "api::support-tag.support-tag",
      "inversedBy": "support_articles"
    }
  }
}
